<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/dialog_seek_permission_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_2FA_enabled"
            android:textColor="@color/address_color"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/dialog_seek_permission_okay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_seek_permission_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAllCaps="true"
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="Okay" />

    </RelativeLayout>

</RelativeLayout>